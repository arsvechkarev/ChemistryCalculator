<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <androidx.camera.view.PreviewView
    android:id="@+id/previewView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

  <com.chemistry.calculator.BottomSheet
    android:id="@+id/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:defaultState="shown">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <com.chemistry.calculator.BoxView
        android:id="@+id/boxView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

      <com.chemistry.calculator.TakePhotoButton
        android:id="@+id/processImageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="30dp"/>

    </FrameLayout>

    <com.chemistry.calculator.keyboard.KeyboardLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?colorKeyboardBg">

      <com.chemistry.calculator.keyboard.NumbersLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <com.chemistry.calculator.keyboard.ControlsLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

      <com.chemistry.calculator.keyboard.ElementsLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </com.chemistry.calculator.keyboard.KeyboardLayout>

  </com.chemistry.calculator.BottomSheet>

</FrameLayout>